#include <stdio.h>
#include <string.h>

#define MAX_ITENS 10  


struct Item {
    char nome[50];
    char tipo[30];
    int quantidade;
};

int main() {
    struct Item mochila[MAX_ITENS]; 
    int quantidade_itens = 0;       
    int opcao;

    do {
        // Menu interativo
        printf("\n=== INVENTARIO DA MOCHILA ===\n");
        printf("1. Adicionar item\n");
        printf("2. Remover item\n");
        printf("3. Listar itens\n");
        printf("4. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);
        getchar(); 

        switch(opcao) {
            case 1: 
                if (quantidade_itens < MAX_ITENS) {
                    printf("Digite o nome do item: ");
                    fgets(mochila[quantidade_itens].nome, 50, stdin);
                    mochila[quantidade_itens].nome[strcspn(mochila[quantidade_itens].nome, "\n")] = 0; // Remove \n

                    printf("Digite o tipo do item: ");
                    fgets(mochila[quantidade_itens].tipo, 30, stdin);
                    mochila[quantidade_itens].tipo[strcspn(mochila[quantidade_itens].tipo, "\n")] = 0;

                    printf("Digite a quantidade: ");
                    scanf("%d", &mochila[quantidade_itens].quantidade);
                    getchar();

                    quantidade_itens++;
                    printf("Item adicionado com sucesso!\n");
                } else {
                    printf("Mochila cheia!\n");
                }
                break;

            case 2: 
                if (quantidade_itens == 0) {
                    printf("Mochila vazia!\n");
                    break;
                }

                char nome_remover[50];
                printf("Digite o nome do item para remover: ");
                fgets(nome_remover, 50, stdin);
                nome_remover[strcspn(nome_remover, "\n")] = 0;

                int encontrado = 0;
                for (int i = 0; i < quantidade_itens; i++) {
                    if (strcmp(mochila[i].nome, nome_remover) == 0) {
                       
                        for (int j = i; j < quantidade_itens - 1; j++) {
                            mochila[j] = mochila[j + 1];
                        }
                        quantidade_itens--;
                        encontrado = 1;
                        printf("Item removido!\n");
                        break;
                    }
                }
                if (!encontrado) {
                    printf("Item nao encontrado!\n");
                }
                break;

            case 3: 
                if (quantidade_itens == 0) {
                    printf("Mochila vazia!\n");
                } else {
                    printf("\n%-20s %-15s %-10s\n", "NOME", "TIPO", "QUANTIDADE");
                    for (int i = 0; i < quantidade_itens; i++) {
                        printf("%-20s %-15s %-10d\n", mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
                    }
                }
                break;

            case 4: 
                printf("Saindo...\n");
                break;

            default:
                printf("Opcao invalida!\n");
        }
    } while (opcao != 4);

    return 0;
}
